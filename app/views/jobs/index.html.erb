<div class="well">
  <h4>Hello <%= current_user.username.capitalize %></h4>
  <% if @user.jobs == 0 %>
    You dont have any jobs. 
  <% else %>
    You currently have <strong><%= @user.jobs.size %></strong> jobs.
  <% end %>
  <br><br>
  <%= link_to 'Add a Job', new_job_path, class: 'btn btn-info' %>

</div>



<% @user.jobs.each do |job| %>

<div class="well span8">
  <div>
    <h4>Job Title: <%= link_to job.name, job_path(job) %></h4>
    <p><strong>Description:</strong> <%= job.description %></p>
  </div>

  <p>
    <%= render 'current_punch', job: job %>
  </p>
  <div class="buttons">
  <% if job.punches.any? %>
    <% if job.punches.last.punch_type == 'out' %>
      <%= render 'form' , job: job %>
    <% else %>
      <%= render 'form' , type: 'out', btn_label: 'Punch Out', btn_class: 'btn btn-danger', job: job %> 
    <% end %>   
  <% else %>
    <%= render 'form' , job: job %>
  <% end %>
  
  <h3>Total Time: <%= total_time_on_job(job) %></h3>

  </div>
</div>  

<% end %>