<% type ||= 'in' %>
<% btn_label ||= 'Punch In' %>
<% btn_class ||= 'btn btn-success' %>
<% job_page ||= false %>

<%= form_for [job, @punch] do |f| %>
  <%= f.hidden_field :job_page, value: 1 if job_page %>
  <%= f.hidden_field :job_id, value: job.id %>
  <%= f.hidden_field :punch_type, value: type %>
  <%= f.submit btn_label , class: btn_class %>
<% end %>  